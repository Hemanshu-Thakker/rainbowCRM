<div class="customer-index">
    <%= form_with url: '/customers/fetch' do |form| %>
        <%= form.select :customer_id, customer_select, {}, {id: 'customer_select_2', class: 'form-control lead-form-input-style', required: true} %>
        <button class="btn btn-success" type="submit">Search</button>
        <a href="<%= new_customers_path %>"><button class="btn btn-warning" style="margin-left: 30px;">Add New</button></a>
    <% end %>
    <div class="pt-5">
        <%= render "customers/show", customer: @customer if @customer.present? %>
    </div>
    <div>
        <h2>Download Customer Data</h2>
        <a href="/leads/generate_customer_data.csv">
        <button type="button" class="btn btn-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z"/>
            </svg> Export
        </button>
    </a>
    </div>
</div>