<div class="lead-form">
<div class="back-button">
    <a href="<%= root_path %>"><i class="bi bi-arrow-right"></i>Back</a>
</div>
<%= form_with model: @lead, url: leads_path(id: @lead) do |form| %>
    <div class="row">
        <div class="col-lg-6">
            <div class='lead-form-input' style="margin-bottom: 20px;">
                <div>Customer</div>
                <%= form.select :customer_id, customer_select, {}, {id: 'customer_select_2', class: 'form-control lead-form-input-style'} %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :item, "Item" %>
                <%= form.select :item_type, item_select, {}, {class: 'form-control lead-form-input-style'} %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :quantity, "Quantity" %>
                <%= form.text_field :quantity, class: 'form-control lead-form-input-style' %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :paper_type, "Paper Type" %>
                <%= form.text_field :paper_type, class: 'form-control lead-form-input-style' %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :colour, "Colour" %>
                <%= form.text_field :colour, class: 'form-control lead-form-input-style' %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class='lead-form-input'>
                <%= form.label :employee, "Assign To" %>
                <%= form.select :employee_id, employee_select, {}, {class: 'form-control lead-form-input-style'} %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :size, "Size" %>
                <%= form.text_field :size, class: 'form-control lead-form-input-style' %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :slip_no, "Slip. No" %>
                <%= form.text_field :slip_no, class: 'form-control lead-form-input-style' %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :s_no, "S. No" %>
                <%= form.text_field :s_no, class: 'form-control lead-form-input-style' %>
            </div>

            <div class='lead-form-input'>
                <%= form.label :payment_details, "Payment Details" %>
                <%= form.text_field :payment_details, class: 'form-control lead-form-input-style' %>
            </div>
        </div>
    </div>

    <div class=''>
        <%= form.label :description, "Description" %>
        <%= form.rich_text_area :description, class: 'form-control ' %>
    </div>

    <div class='lead-form-input' style="text-align: right;">
    <span class="edit-button"><a href="<%= root_path %>">Cancel</a></span>
        <%= form.submit "Submit", class: 'edit_button' %>
    </div>

<% end %>
</div>